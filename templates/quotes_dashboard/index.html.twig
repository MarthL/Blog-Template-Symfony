{% extends 'base.html.twig' %}

{% block title %}Quotes index{% endblock %}

{% block body %}
    <h1>Quotes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quote in quotes %}
            <tr>
                <td>{{ quote.id }}</td>
                <td>{{ quote.content }}</td>
                <td>
                    <a href="{{ path('quotes_dashboard_show', {'id': quote.id}) }}">show</a>
                    <a href="{{ path('quotes_dashboard_edit', {'id': quote.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('quotes_dashboard_new') }}">Create new</a>
{% endblock %}
