{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

    <h1> Blog </h1>

    <div class="container">

        {% for article in articles %}    

            <div class="card mb-5" style="max-width: 800px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="{{article.image}}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text"> {{article.content}} </p>
                    <p class="card-text"> Cat√©gorie :  {{article.category}} </p>
                    <p class="card-text"><small class="text-muted">Created at {{article.date|date("d/m/Y")}} </small></p>
                    <a href="/blog/show/{{article.slug}}"> <button type="button" class="btn btn-primary">Lire la suite </button> </a>
                  </div>
                </div>
              </div>
            </div>

        {% endfor %}

    </div>

{% endblock %}
